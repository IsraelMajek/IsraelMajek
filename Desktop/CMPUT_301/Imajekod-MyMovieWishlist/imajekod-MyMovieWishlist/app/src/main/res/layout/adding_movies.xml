<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <EditText
        android:id="@+id/edit_text_movie_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Movie Title"
        android:textSize="16sp"
        android:padding="8dp" />

    <EditText
        android:id="@+id/edit_text_director_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Director Name"
        android:textSize="16sp"
        android:padding="8dp" />

    <EditText
        android:id="@+id/edit_text_genre_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Movie Genre"
        android:textSize="16sp"
        android:padding="8dp" />

    <EditText
        android:id="@+id/edit_text_year_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Year (e.g., 2023)"
        android:inputType="number"
        android:textSize="16sp"
        android:padding="8dp" />

    <CheckBox
        android:id="@+id/have_watched"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="âœ” I have watched this movie"
        android:textSize="16sp"
        android:paddingTop="8dp" />

</LinearLayout>
